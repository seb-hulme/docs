{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Replyify",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Using Replyify",
            "pages": [
              "guides/inbox-management",
              "guides/ai-responses",
              "guides/connections",
              "guides/clients-settings",
              "guides/team-management",
              "guides/analytics",
              "guides/billing-plans"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "guides/troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication"
            ]
          },
          {
            "group": "Replies",
            "pages": [
              "api-reference/replies/list",
              "api-reference/replies/get",
              "api-reference/replies/update",
              "api-reference/replies/send",
              "api-reference/replies/forward"
            ]
          },
          {
            "group": "Contacts",
            "pages": [
              "api-reference/contacts/list",
              "api-reference/contacts/get"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/overview",
              "api-reference/webhooks/events",
              "api-reference/webhooks/security"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.replyify.ai",
          "icon": "gauge-high"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@replyify.ai",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@replyify.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Go to App",
      "href": "https://app.replyify.ai"
    }
  },
  "api": {
    "baseUrl": "https://app.replyify.ai/api",
    "auth": {
      "method": "bearer"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/replyify",
      "linkedin": "https://linkedin.com/company/replyify"
    }
  }
}
